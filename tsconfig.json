{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "api/**/*"
  ],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,

    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",

    "baseUrl": ".",
    "types": ["node", "@vercel/node", "vite/client"],

    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
